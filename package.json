{
  "name": "prismscope-website",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "check-links": "node scripts/check-links.js",
    "check-links:local": "node scripts/check-links.js --local",
    "check-links:live": "node scripts/check-links.js --live",
    "check-links:verbose": "node scripts/check-links.js --verbose",
    "setup:devcontainer": "npm install && echo 'ðŸŽ‰ Dev container setup complete!'",
    "dev:host": "vite --host 0.0.0.0",
    "docker:build": "docker build -t gcr.io/ai-problem-statement/prismscope-website:dev .",
    "docker:run": "docker run --rm -p 8080:8080 gcr.io/ai-problem-statement/prismscope-website:dev",
    "docker:dev": "npm run docker:build && npm run docker:run",
    "k8s:deploy": "kubectl apply -k k8s/",
    "k8s:status": "kubectl get all -n external-web",
    "k8s:logs": "kubectl logs -n external-web -l app=prismscope-website --tail=50",
    "gcp:static-ip": "./k8s/create-static-ip.sh",
    "test:all": "npm run lint && npm run build && npm run check-links:local",
    "dev:full": "concurrently \"npm run dev:host\" \"npm run check-links:local\"",
    "clean": "rm -rf node_modules dist .vite && npm install"
  },
  "dependencies": {
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.8.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "postcss": "^8.4.24",
    "tailwindcss": "^3.3.0",
    "vite": "^4.4.5"
  }
}
